	<preference for="Magento\Framework\Mail\Template\TransportBuilder" type="Experius\EmailCatcher\Mail\Template\TransportBuilder"/>
	<type name="Magento\Framework\Mail\TransportInterface">
		<plugin name="EmailDisable" type="Experius\EmailCatcher\Plugin\Magento\Framework\Mail\TransportInterface" />
	</type>
	<type name="Magento\Framework\Mail\Template\TransportBuilder">
		<plugin name="EmailGetTemplateIdForFilter" type="Experius\EmailCatcher\Plugin\Magento\Framework\Mail\Template\TransportBuilder" />
	</type>
	<type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
		<arguments>
			<argument name="collections" xsi:type="array">
				<item name="experius_emailcatcher_grid_data_source" xsi:type="string">Experius\EmailCatcher\Model\ResourceModel\Emailcatcher\Grid\Collection</item>
			</argument>
		</arguments>
	</type>
</config>
